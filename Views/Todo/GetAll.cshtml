@model List<TodoApi.Models.TodoItem>

<table>
    <thead>
        <th>Name</th>
        <th>Is Complete</th>
        <th>Created At</th>
    </thead>
    @for(int i =0; i < Model.Count; i++) {
        <tr>
            <td>
                @Model[i].Name
            </td>
            <td>
                @Model[i].IsComplete
            </td>
            <td>
                @Model[i].CreatedAt
            </td>
        </tr>
    }

</table>

<form action="/api/todo" method="POST">
    <input type="text" name="name" />
    <input type="submit"/>
</form>